<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link rel="stylesheet" href="/css/signup.css">
</head>
<body>
    <div class="container">
        <!-- Logo Section -->
        <div class="logo">
            <img src="/images/logo.png" alt="Workout Logo">
        </div>

        <!-- Image and Form Section -->
        <div class="content">
            <div class="image-container"></div>

            <!-- Form -->
            <form action="/send-otp" method="POST">
                <!-- Image inside the form -->
                <div class="form-image-container">
                    <img src="/images/progress-image.jpg" alt="Profile Placeholder" class="form-image">
                </div>
                <div class="signup">SIGN-UP</div>

                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="message <%= messageType === 'error' ? 'error' : 'success' %>">
                        <%= message %>
                    </div>
                <% } %>

                <input type="text" name="name" placeholder="Name" required>
                <input type="email" name="email" placeholder="Email" required>
                <button type="submit">Get OTP</button>
                <a href="/login">Already a user? Login here.</a>
            </form>
        </div>
    </div>
</body>
</html>
