<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <!-- Link to External CSS -->
    <link rel="stylesheet" href="/css/forgot-password.css">
</head>
<body class="forgot-password-page">
    <div class="main-container">
        <!-- Left Section with Logo -->
        <div class="logo-container">
            <img src="/images/logo.png" alt="Fitness Tracker Logo" class="logo-image">
        </div>

        <!-- Right Section with Forgot Password Form -->
        <div class="right-section">
            <div class="forgot-password-header-image">
                <img src="/images/progress-image.jpg" alt="Forgot Password Header" class="header-image">
            </div>
            <h2 class="forgot-password-title">Forgot Password</h2>
            <% if (message) { %>
                <p class="forgot-password-error"><%= message %></p>
            <% } %>
            <form action="/send-reset-otp" method="POST" class="forgot-password-form-elements">
                <div class="form-group">
                    <label for="email" class="form-label">Enter your registered email:</label>
                    <input 
                        type="email" 
                        name="email" 
                        id="email" 
                        class="form-input" 
                        placeholder="Email" 
                        required>
                </div>
                <button type="submit" class="forgot-password-submit">Send OTP</button>
            </form>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const messageElement = document.querySelector('.forgot-password-error');
            if (messageElement) {
                setTimeout(() => {
                    messageElement.style.display = 'none';
                }, 3000); // 3000ms = 3 seconds
            }
        });
    </script>
</body>
</html>
